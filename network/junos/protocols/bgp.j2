protocols {
    bgp {
{% for bgp in bgp %}
        group {{ bgp.name }} {
            local-as {{ bgp.asn }};
            type {{ bgp.type }};
            local-address {{ bgp.local_add }};
{% for peer in bgp.peer %}
            neighbor {{ peer.name }} {
                description "{{ peer.description }}";
            }
{% endfor %}
        }
    }
}
{% endfor %}
